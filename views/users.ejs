    </section>

     <section id="userintro">

       <div class="col">
      <div class="row justify-content-between">
        <div class="col-10 col-md-6 my-auto" style="  color: #ffffff;">
          <div class="row mb-5"> <h1 >Transaction were never this easy!!</h1></div>
          <div class="row">
            <div class="col">
             <div class="row"><i class="bi user-icons bi-file-person fa-3x"></i></div>
             <div class="row"><h4 class="sub-heading mb-3">Select the user </h4></div>
             <div class="row mr-3"> <p>Just select the user from the  User List below </p></div>
            </div>
            <div class="col">
              <div class="row"><i class="bi user-icons bi-cash-stack fa-3x"></i></div>
              <div class="row"><h4 class="sub-heading mb-3">Make the Transaction</h4></div>
              <div class="row mr-3"> <p>Select the amound you want to Transfer to any other user. </p></div>
            </div>
          </div>
         
          
        </div>
        <div class="col-8 col-md-5 text-center card shadow align-content-center my-auto rounded">
            <img src="image/transaction3.svg" alt="Interview Image" style="width:100%;"> 
        </div>
      </div>
    </div>
     </section>


  </section>
   
    <div class="row justify-content-around my-5" style="width:100%">
      <div class="col text-center">
        <h1 style="color: #4534aa;">User List</h1>
      </div>
    </div>
    <div class="row d-flex justify-content-center  mb-100" style="width: 100%;" >
        <div class="col-12 col-md-10 col-lg-7">
            <div class="card shadow">
                <ul class="list-style-none">
                   <% users.forEach(function(user){ %>
                    <li class="d-flex no-block card-body my-3"> 
                        <div class="col-6">
                          <div class="row">
                            <a href=<%=user.email%> ><%= user.username%></a>
                          </div>
                          <div class="row">
                            <i class="bi bi-envelope"></i>
                            <span class="text-muted ml-3"> <%=user.email%></span>
                          </div>
                        </div>
                        <div class="col-6 my-auto">
                          <div class="ml-auto ">
                            <div class="text-right mr-5">
                                <p class="text-muted m-b-0"> Rs. <%=user.balance%></p>
                            </div>
                        </div>
                        </div> 
                    </li>
                    <%}) %>
                </ul>
            </div>
        </div>
    </div>

</div>
