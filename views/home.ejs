  <section id="goal">
    <div class="row justify-content-around mb-5">
      <div class="col text-center">
        <h1>Recent Transactions</h1>
      </div>
    </div>
      <div class="row d-flex justify-content-center mt-100 mb-100" style="width: 100%;" >
        <div class="col-12 col-md-10 col-lg-8" >
            <div class="card shadow px-3 py-5 " style="background-color: #d6d1f5;">
                <ul class="list-style-none">
                  <li class="row  card-body justify-content-around text-center font-weight-bold"> 
                    <div class="col ">
                      From
                    </div>
                    <div class="col">
                      To
                    </div>
                    <div class="col">
                      Amount (Rs)
                    </div>
                    
                </li>
                <% transArray.forEach(function( transaction){ %>
                  <li class="row  card-body justify-content-around text-center my-3 "> 
                    <div class="col ">
                      <%= transaction.from %>
                    </div>
                    <div class="col">
                      <%= transaction.to %>
                    </div>
                    <div class="col">
                      <%= transaction.amount %>
                    </div>        
                </li>       
              <% }) %>
                </ul>
            </div>
        </div>
    </div>
  
  </section>
