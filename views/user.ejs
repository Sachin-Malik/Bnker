  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;300;400&display=swap" rel="stylesheet">
  <link rel="icon" type="image/svg+xml" href="assets/favicon.svg" />
  <!-- Bootstrap ICONS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
  <!-- Bootstrap CSS -->
  
 </script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


  <!-- My CSS Sheets -->
  <link rel="stylesheet" href="css/users.css">
  <link rel="stylesheet" href="css/main.css">

  <title>Bnker-<%=userDetail.username%> </title>
</head>

<body>
   
   <div class="container-fluid ">
    <div class="col text-center plt mt-100">
        <div class="row justify-content-start">
            <div class="col-8 text-left">
             <h1 style="color:#45a">Profile&nbsp <i class="bi bi-person"></i></h1>
            </div>
        </div>
      </div>
       <div id="userDetails">
    <div class="col">
       <div class="row justify-content-between">
           <div class="col-8 col-md-4 my-auto card shadow text-center p-5 userpage">
             <img src="image/person.svg" alt="User Avatar" style="max-height: 100px;" >
             <p class="mt-4">  <b><%=userDetail.username%></b> </p>
           </div>
           <div class="col-10 col-md-7 p-5 m-3 card shadow">
               <div class="row">
                   <b>FullName:&nbsp &nbsp </b> <%=userDetail.username%>
               </div>
               <hr>
               <div class="row">
                  <b>Email</b>:&nbsp <%=userDetail.email%>
               </div>
               <hr>
               <div class="row">
                <b>Balance:&nbsp &nbsp </b>Rs.  <%=userDetail.balance%>
            </div>
            <hr>
           </div>
       </div>
    </div>  
   </div>

   <section id="transaction">
       <div class="row">
     <div class="col text-left mb-5">
       <div class="row justify-content-start">
           <div class="col-8 text-left">
            <h1 style="color:#45a">Transfer Money &nbsp<i class="bi bi-cash-stack"></i></h1>
           </div>
       </div>
    </div>
     </div>
     <div class="row mb-100">
     <div class="col">
         <div class="row justify-content-between shadow p-5">
             <div class="col-6 my-auto">
                <form action ="/transaction" method="POST">
                      <label for="username" >Transer To</label>
                      <select name="to" class="form-control mb-3" id="username">
                          <%users.forEach(function(user){%>
                            <% if(user.username!=userDetail.username)%>
                                <option><%=user.username%></option>  
                          <%})%>
                        
                      </select>
                      <input class="d-none" type="text" name="from" value="<%=userDetail.username%>">
                      <label for="balance">Amount</label>
                      <input name="amount" type="number" class="form-control mb-5" id="balance">             
                      <a> <button type="submit" class="btn btn-lg btn-outline-primary btn-explore ">Make Transaction</button></a>     
                </form>           
             </div>
             <div class="col-4 pb-3">
                 <img src="image/wallet.svg" alt="Wallet Image" style="width:80%">
             </div>
         </div>
     </div>
    </div>
   </section>
</div>
  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>

</html>